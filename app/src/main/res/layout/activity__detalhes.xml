<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marce.teste.rest.Activity_Detalhes">



    <TextView
        android:id="@+id/Detalhes_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Titulo"
        android:textSize="20sp"
      />

    <TextView
        android:id="@+id/Detalhes_decricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Conteudo"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@+id/Detalhes_Titulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Detalhes_decricao"
        android:text="Favorito"/>




</RelativeLayout>



